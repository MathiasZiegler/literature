doi = {10.1073/pnas.0900604106},
file = {:home/mbo049/Documents/Mendeley Desktop/Kosugi et al. - 2009 - Systematic identification of cell cycle-dependent yeast nucleocytoplasmic shuttling proteins by prediction of com.pdf:pdf},
