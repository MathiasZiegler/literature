journal = {Proceedings of the National Academy of Sciences},
month = {jun},
number = {25},
pages = {10171--6},
pmid = {19520826},
title = {{Systematic identification of cell cycle-dependent yeast nucleocytoplasmic shuttling proteins by prediction of composite motifs.}},
url = {http://www.pnas.org/cgi/doi/10.1073/pnas.0900604106 http://www.ncbi.nlm.nih.gov/pubmed/19520826 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC2695404},
