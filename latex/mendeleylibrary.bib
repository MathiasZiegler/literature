pmid = {25084685},
publisher = {Elsevier B.V.},
title = {{Sequence divergence and diversity suggests ongoing functional diversification of vertebrate NAD metabolism}},
url = {http://dx.doi.org/10.1016/j.dnarep.2014.07.005},
