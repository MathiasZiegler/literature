doi = {10.1371/journal.pone.0016410},
file = {:home/mbo049/Documents/Mendeley Desktop/Longo, O'Neill, O'Neill - 2011 - Abundant human DNA contamination identified in non-primate genome databases.PDF:PDF},
issn = {19326203},
journal = {PLoS ONE},
number = {2},
pages = {1--4},
