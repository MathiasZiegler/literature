doi = {10.1074/mcp.M115.052449},
file = {:home/mbo049/Documents/Mendeley Desktop/Hamey et al. - 2016 - Novel N-terminal and Lysine Methyltransferases That Target Translation Elongation Factor 1A in Yeast and Human.pdf:pdf},
issn = {1535-9476},
journal = {Molecular & Cellular Proteomics},
number = {1},
pages = {164--176},
pmid = {26545399},
title = {{Novel N-terminal and Lysine Methyltransferases That Target Translation Elongation Factor 1A in Yeast and Human}},
url = {http://www.mcponline.org/lookup/doi/10.1074/mcp.M115.052449},
volume = {15},
