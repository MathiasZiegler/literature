file = {:home/mbo049/Documents/Mendeley Desktop/B{\"{u}}tepage et al. - 2015 - Intracellular Mono-ADP-Ribosylation in Signaling and Disease.pdf:pdf},
issn = {2073-4409},
journal = {Cells},
keywords = {ADP-ribosylation,DNA repair,NF-$\kappa$B,adp-ribosylation,cancer,dna repair,endoplasmic reticulum,gene,gene transcription,immunity,infection,nf- $\kappa$ b,signaling,stress,transcription},
number = {4},
pages = {569--595},
pmid = {26426055},
title = {{Intracellular Mono-ADP-Ribosylation in Signaling and Disease.}},
url = {http://www.mdpi.com/2073-4409/4/4/569/},
